[Unit]
Description=Danmaku Render
Requires=danmaku-fetcher.service
After=danmaku-fetcher.service

[Service]
Type=simple
WorkingDirectory=/root/ZynqDanmaku-Host
ExecStart=/bin/sh -c 'exec /root/ZynqDanmaku-Host/danmaku </tmp/danmaku.fifo'
Restart=always
RestartSec=1

[Install]
WantedBy=multi-user.target
